.appAddress
  background: #fff
  .ivu-icon
    margin-top: -2px
  .tabBtns
    height: 75vh
    .ivu-tabs-tabpane
      >div
        height: 63vh
        overflow-y: auto
    .ivu-tabs-nav
      background: #fff
      min-width: 100%
      .ivu-tabs-tab
        width: 100%
        text-align: center
        height: 6.5vh
        line-height: 6.5vh
        padding: 0
  .p-active
    margin: 8px
    height: 16vh
    padding: 5px 10px
    border-radius: 4px
    background: #fff
    box-shadow: 0 0 5px 0 #dbdbdb
  .active-title
    text-align: center
    font-size: 1.6rem
    color: #d38b2c
    margin-bottom: 10px
  .active-user,
  .active-phone,
  .active-address
    color: #d38b2c
    font-size: 1.3rem
  .active-address,
  .p-address
    margin-top: 5px
    overflow-y: auto
    height: 40px
    text-align: justify
  .p-address
    height: auto
  .p-list
    margin: 8px
    padding: 10px 10px
    border-radius: 4px
    background: #fff
    overflow: hidden
    box-shadow: 0 0 5px 0 #dbdbdb
    div
      font-size: 1.3rem
  .p-manage
    font-size: 1.2rem
    margin-top: 10px
    button
      padding: 1px 10px
      border-radius: 4px
    span
      padding: 0
      font-size: 1.2rem
    i
      font-size: 1.8rem
  .p-addAdress
    button
      position: fixed
      bottom: 10px
      left: 25%
      font-size: 1.6rem
      color: #fff
      box-shadow: 0 0 5px 0 #dbdbdb
      width: 50%
      padding: 2px 15px 3px 15px
      text-align: center
      border-radius: 5rem
  .p-delete
    color: #fff
  .edit-main
    font-size: 1.4rem
.address-model
  .x-address
    >div
      >span
        width: 59.5px
        height: 73px
        display: inline-block
        vertical-align: top
        line-height: 2.2
        color: #000
      >div
        display: inline-block
        width: calc(100% - 61px)
        margin-left: -4px
