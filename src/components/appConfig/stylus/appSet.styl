.appSet
  background: #fff
  .p-main
    margin: 3px
    padding: 10px 10px
    border-radius: 4px
    background: #fff
    box-shadow: 0 0 5px 0 #dbdbdb
    .ivu-form-inline .ivu-form-item
      width: 100%
      margin: 1rem 0 2rem
  .p-bottom
    width: 100%
    text-align: center
    position: fixed
    left: 0
    bottom: 5px
    button
      color: #f4f4f4
      width: 80%
  .p-address
    >div
      >span
        width: 51.5px
        display: inline-block
        vertical-align: top
        line-height: 2.2
      >div
        display: inline-block
        width: calc(100% - 56px)
        