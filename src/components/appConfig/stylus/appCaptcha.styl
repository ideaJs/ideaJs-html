.appCaptcha
  .container
    width: 300px
    margin: 10px auto

  .headerFace
    border-radius: 100% 100%
    display: block
    margin: 0 auto

  input
    display: block
    width: 300px
    line-height: 40px
    margin: 10px auto
    padding: 0 10px
    outline: none
    border:1px solid #f3f3f3
    border-radius: 4px
    color:#666
    text-align: center

  #msg
    width: 300px
    line-height: 40px
    font-size: 13px
    text-align: center

  .sliderText
    font-size: 13px

  .block
    position: absolute
    left: 0
    top: 0

  .sliderContainer
    position: relative
    text-align: center
    width: 300px
    height: 38px
    line-height: 38px
    margin-top: 15px
    background: #f3f3f3
    color: #999
    border: 1px solid #f3f3f3
    border-radius: 30px

  .sliderMask
    position: absolute
    left: 0
    top: -1px
    height: 37px
    border: 0 solid #f3f3f3
    background: #D1E9FE
    border-radius: 30px 0 0 30px

  .slider
    position: absolute
    top: 0
    left: 0
    width: 36px
    height: 36px
    background: #f3f3f3
    border: 1px solid #e3e3e3
    border-radius: 100%

  .sliderIcon
    position: absolute
    right: 0
    top: -1px
    width: 38px
    height: 38px
    border: 1px solid #e3e3e3
    border-radius: 100%
    box-shadow: 0 0 3px rgba(0, 0, 0, 0.2)
    background:#f3f3f3 url(../../common/images/small-icon/icon-s-001.png) no-repeat center center
    background-size: 25px 25px

  .refreshIcon
    position: absolute
    right: 0
    top: 0
    width: 38px
    height: 38px
    cursor: pointer
    border: 1px solid #e3e3e3
    border-radius: 100%
    background:#f3f3f3 url(../../common/images/small-icon/icon-s-004.png) no-repeat center center
    background-size: 25px 25px
    box-shadow: 0 0 3px rgba(0, 0, 0, 0.2)
