.appEnPhraseDetail
  background: #fff
  color: #1C8605
  .ivu-btn
    width: 30%
  .ivu-btn:hover, .ivu-btn[disabled], button:hover, button[disabled], input[type=button]:hover, input[type=button][disabled]
    background: linear-gradient(#19be6b, #79fcbc)
  .p-bottom
    position: fixed
    bottom: 5px
    left: 0
    width: 100%
    text-align: center
  .p-main
    margin: 3px
    padding: 10px 10px
    border-radius: 4px
    background: #fff
    box-shadow: 0 0 5px 0 #dbdbdb
  .p-header
    background: #FEF3D7
    position: relative
    >div
      text-align: center
      font-size: 1.7rem
      color: #1C8605
      padding: 10px 0 10px
    .p-name
      font-size: 3.6rem
      color: #BC0D36
  .p-collect
    cursor: pointer
    width: 40px
    height: 36px
    text-align: center
    padding: 20 30px
    margin: 0 5%
    vertical-align: middle
    display: inline-block
    div
      font-size: 1.2rem
      color: #c6713d
      margin-top: -2px
    span
      margin-right: 0px
    i
      font-size: 2rem
    .ivu-icon-md-star-outline
      color: #666
    .ivu-icon-md-star
      color: #C6713D
  .p-meaning,
  .p-example
    text-align: justify
    >div
      margin: 20px 0 10px
    >div:nth-child(1)
      color: #000
      margin: 20px 0 10px
  .p-example
    border-top: 1px solid #f2e8d7
  .p-audio
    padding: 5px 15px
    color: #1A73E8
    cursor: pointer
    i
      font-size: 1.8rem
