.appEnPhrase
  background: #fff
  .col-list
    margin: 3px
    padding: 10px 5px
    border-radius: 4px
    background: #fff
    box-shadow: 0 0 5px 0 #dbdbdb
  .p-title
    margin: 0 3px 3px
    padding: 8px 5px
    background: #fff
  .rightBtn
    font-size: 1.2rem
    float: right
  .p-num,
  .p-name
    color: #CB1A0A
  .p-name
    font-size: 2rem
  .p-phonetic
    color: #5C7627
    padding-left: 5px
  .p-meaning
    padding-top: 10px
    >span
      color: #5C7627
      word-wrap: break-word
      word-break: break-all
      text-align: justify
      margin-right: 20px
