.headers
  position: absolute
  z-index: 888
  width: 100%
  top: 0
  >div
    width: 100%
    height: 2.5rem
    background: linear-gradient(#030840, #0000EE)
    color: #f3f3f3
    >div
      float: left
      text-align: center
      line-height: 2.5rem
      i
        color: #f3f3f3
      >span
        color: #f3f3f3
        font-size: 1.125rem
        display: inline-block
        margin: 0 auto
    >div:nth-child(1)
      width: 2.5rem
      line-height: 2.5rem
    >div:nth-child(2)
      width: calc(100% - 80px)
    >div:nth-child(3)
      width: 2.5rem
  .startPage
    background: rgba(0,0,0,0)!important
    >div
      width: 100%!important
      width: 100%!important
      text-align: center!important
      >span
        color: #030840!important
