
.headerLine
  position: absolute
  z-index: 888
  width: 100%
  background: #fff
  >div
    width: 100%
    height: 2.5rem
    background: linear-gradient(#030840, #0000EE)
    color: #f3f3f3
    >div
      float: left
      text-align: center
      line-height: 2.5rem
      i
        color: #f3f3f3
      >span
        color: #f3f3f3
        font-size: 1.125rem
        display: inline-block
        margin: 0 auto
    >div:nth-child(1)
      width: 2.5rem
      line-height: 2.5rem
    >div:nth-child(2)
      width: calc(100% - 80px)
    >div:nth-child(3)
      width: 2.5rem
