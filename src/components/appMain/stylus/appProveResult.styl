
.appProveResult
  background: #fff
  padding-top: 0!important
  text-align: center
  .container
    width: 300px
    >form
      margin-top: 20px
  .proveImg
    margin: 30px 0 20px
    >i
      font-size: 12rem
  .proveTitle
    font-size: 2.5rem
    color: #333
  .proveMsg
    padding: 20px
    font-size: 1.4rem
    color: #999
  .proveBtn
    button
      position: fixed
      bottom: 10px
      left: 25%
      font-size: 1.6rem
      color: #fff
      box-shadow: 0 0 5px 0 #dbdbdb
      width: 50%
      padding: 2px 15px 3px 15px
      text-align: center
      border-radius: 5rem
