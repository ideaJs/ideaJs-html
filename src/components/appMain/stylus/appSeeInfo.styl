.appSeeInfo
  background: #fff
  color: #d38b2c
  overflow-y: auto
  padding-bottom: 5rem
  .ivu-icon
    margin-top: -2px
  .p-active
    position: relative
    margin: 8px
    min-height: 19vh
    padding: 5px 10px
    border-radius: 4px
    background: #fff
    box-shadow: 0 0 5px 0 #dbdbdb
  .active-title
    text-align: center
    font-size: 1.6rem
    color: #d38b2c
    margin-bottom: 10px
  .active-user
    text-align: center
    margin-top: 5px
    margin-bottom: 20px
  .p-headImg
    height: 5rem
    img
      position: absolute
      top: -5px
      left: 50%
      margin-left: -3rem
      z-index: 99
      width: 6rem
      height: 6rem
      border-radius: 100%
      background: #fff
      box-shadow: 0 0 5px 0 #666
  .p-user
    img
      width: 3rem
      height: 3rem
      border-radius: 100%
      vertical-align: middle
      background: #e3e3e3
      box-shadow: 0 0 5px 0 #999
  .p-list
    padding: 8px 0
    line-height: 1.5
    text-align: justify
    span
      float: right
  .p-addFriends
    button
      position: fixed
      bottom: 10px
      left: 25%
      font-size: 1.6rem
      color: #fff
      box-shadow: 0 0 5px 0 #dbdbdb
      width: 50%
      padding: 2px 15px 3px 15px
      text-align: center
      border-radius: 5rem
  .p-delete
    color: #fff
