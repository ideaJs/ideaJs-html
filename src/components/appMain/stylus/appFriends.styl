.appFriends
  background: #fff
  .ivu-icon
    margin-top: -2px
  .tabBtns
    height: 69vh
    .ivu-tabs-tabpane
      >div
        height: 62.5vh
        overflow-y: auto
    .ivu-tabs-nav-scroll
      background: #fff
      overflow-x: auto
      width: 100%
      div
        width: 100%
      .ivu-tabs-tab
        width: 18%
        text-align: center
        height: 6.5vh
        line-height: 6.5vh
        padding: 0
  .p-active
    position: relative
    margin: 8px
    min-height: 19vh
    padding: 5px 10px
    border-radius: 4px
    background: #fff
    box-shadow: 0 0 5px 0 #dbdbdb
  .active-title
    text-align: center
    font-size: 1.6rem
    color: #d38b2c
    margin-bottom: 10px
  .active-user,
  .active-phone,
  .active-friends
    color: #d38b2c
    font-size: 1.3rem
  .active-user
    text-align: left
  .p-headImg
    height: 5rem
    img
      position: absolute
      top: -5px
      left: 50%
      margin-left: -3rem
      z-index: 99
      width: 6rem
      height: 6rem
      border-radius: 100%
      background: #fff
      box-shadow: 0 0 5px 0 #666
  .p-user
    img
      width: 3rem
      height: 3rem
      border-radius: 100%
      vertical-align: middle
      background: #e3e3e3
      box-shadow: 0 0 5px 0 #999
  .active-friends,
  .p-friends
    margin-top: 5px
    overflow-y: auto
    height: 40px
    text-align: justify
  .p-friends
    height: auto
  .p-list
    margin: 8px
    padding: 10px 10px 5px
    border-radius: 4px
    background: #fff
    overflow: hidden
    box-shadow: 0 0 5px 0 #dbdbdb
    div,
    span
      font-size: 1.3rem
  .p-manage
    font-size: 1.2rem
    margin-top: 10px
    button
      padding: 1px 10px
      border-radius: 4px
    span
      padding: 0
  .p-addFriends
    button
      position: fixed
      bottom: 10px
      left: 25%
      font-size: 1.6rem
      color: #fff
      box-shadow: 0 0 5px 0 #dbdbdb
      width: 50%
      padding: 2px 15px 3px 15px
      text-align: center
      border-radius: 5rem
  .p-delete
    color: #fff
  .edit-main
    font-size: 1.4rem
  .p-more
    margin-top: 5px
    margin-right: -3px
