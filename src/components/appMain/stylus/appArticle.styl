.appArticle
  background: #fff
  .p-main
    padding: 3px 5px 5px
    color: #333
    font-size: 1.4rem
    text-align: justify
  .p-header
    height: 9vh
    .p-title
      font-size: 1.5rem
      text-align: center
      margin-bottom: 10px
    .p-date
      font-size: 1.3rem
    .p-author
      text-align: right
      span
        font-size: 1.3rem
  .p-article
    margin-top: 5px
    height: 83vh
    overflow-y: auto
    padding: 5px 3px
    border-radius: 4px
    box-shadow: 0 0 5px 0 #dbdbdb
    background: #fff
  .p-img
    width: 100%
    height: 15rem
    background: #e3e3e3
    border: 1px solid #e3e3e3
  .p-text
    line-height: 2
