.appEditInfo
  background: #fff
  overflow-y: auto
  padding-bottom: 5rem
  .p-main
    position: relative
    margin: 8px
    min-height: 19vh
    padding: 5px 10px
    border-radius: 4px
    box-shadow: 0 0 5px 0 #dbdbdb
  .p-headImg
    height: 5rem
    img
      position: absolute
      top: -5px
      left: 50%
      margin-left: -3rem
      z-index: 99
      width: 6rem
      height: 6rem
      border-radius: 100%
      box-shadow: 0 0 5px 0 #333
  .p-user
    img
      width: 3rem
      height: 3rem
      border-radius: 100%
      vertical-align: middle
      background: #e3e3e3
      box-shadow: 0 0 5px 0 #999
  .p-friends
    margin-top: 5px
    overflow-y: auto
    height: 40px
    text-align: justify
  .p-friends
    height: auto
  .edit-main
    font-size: 1.4rem
  .typeError
    position: absolute
    top: 100%
    left: 0
    line-height: 1
    padding-top: 6px
    color: #ed4014
    font-size: 1.2rem
    width: 100% !important
    margin: 0 !important
  .x-type
   .ivu-select-selection
    border-radius: 0 4px 4px 0
    height: 36px
  .ivu-select-single .ivu-select-selection .ivu-select-placeholder,
  .ivu-select-single .ivu-select-selection .ivu-select-selected-value
    height: 34px
    line-height: 31px
    font-size: 1.4rem
  .vux-datetime-value,
  .vux-popup-picker-select-box
    height: 36px
    float: right
    position: relative
    z-index: 666
    margin-top: -36px
    width: 100%
    opacity: 0
  .x-address
    >div
      >span
        width: 57px
        height: 71px
        display: inline-block
        vertical-align: bottom
        line-height: 2.2
        background: #fff
        color: #000
        border-radius: 4px 0 0 4px
      >div
        display: inline-block
        width: calc(100% - 57px)
        margin-left: -4px
  .p-red
    color: #B92722!important
  .ivu-input
    border: none
  .ivu-input-wrapper
    vertical-align: bottom
